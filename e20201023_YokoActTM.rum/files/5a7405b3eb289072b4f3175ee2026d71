using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using Charlotte.GameCommons;
using Charlotte.GameCommons.Options;

namespace Charlotte.Games
{
	public class MapCell
	{
		/// <summary>
		/// このマップセルが壁であるか
		/// </summary>
		public bool Wall = false;

		/// <summary>
		/// マップタイル
		/// null 禁止
		/// -- 何も表示しない場合は MapUtils.MapTileCollection.I.None を設定すること。
		/// </summary>
		public DDPicture Tile = MapUtils.MapTileCollection.I.None;

		/// <summary>
		/// このマップセルに配置された敵の名前
		/// null 禁止
		/// -- 何も配置しない場合は Consts.ENEMY_NONE を設定すること。
		/// </summary>
		public string EnemyName = Consts.ENEMY_NONE;

		// <---- prm

		// TODO
	}
}
